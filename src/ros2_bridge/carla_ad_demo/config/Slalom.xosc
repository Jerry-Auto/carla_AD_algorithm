    <!-- Story -->
    <Story name="SlalomStory">
      <Act name="MainAct">
        <ManeuverGroup name="EmptyManeuverGroup" maximumExecutionCount="1">
          <Actors selectTriggeringEntities="false">
            <EntityRef entityRef="ego_vehicle" />
          </Actors>
        </ManeuverGroup>

        <StartTrigger>
          <ConditionGroup>
            <Condition name="StartAtTimeZero" delay="0" conditionEdge="rising">
              <ByValueCondition>
                <SimulationTimeCondition value="0.0" rule="greaterThan" />
              </ByValueCondition>
            </Condition>
          </ConditionGroup>
        </StartTrigger>

        <StopTrigger>
          <ConditionGroup>
            <Condition name="Timeout" delay="0" conditionEdge="rising">
              <ByValueCondition>
                <SimulationTimeCondition value="60.0" rule="greaterThan" />
              </ByValueCondition>
            </Condition>
          </ConditionGroup>
        </StopTrigger>
